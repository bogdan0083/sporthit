// MEGA-SLIDER

.mega-slider
	position: relative
	margin: 0
	height: 300px
	text-align: center
	overflow: hidden
	+above($screen-sm)
		height: 560px
	.slide .container
		height: 100%
		display: table
		width: 100%
		position: relative
		&:before, &:after
			content ''
			width: 1200px
			top -200px
			left: 50%
			height: 764px
			background url(../images/blur1.png) no-repeat center / 100% 100%
			position: absolute
			opacity: 0.4
			transform translateX(-50%)
			+above($screen-sm)
				opacity: 0.8
				top -100px
	.slide-content
		display: table-cell
		width: 100%
		vertical-align: middle
		position: relative
		z-index: 1
		&-body
			max-width 800px
			margin: 0 auto
		&-heading
			color #1c56a0
			text-transform: uppercase
			font-weight: 300
			font-size: 1.6rem
			line-height: 1.4
			position: relative
			padding 20px 0
			&:before, &:after
				content ''
				background-color: #ffb400
				width: 154px
				left 50%
				top 0
				margin-left: -77px
				height: 1px
				position: absolute
			&:after
				top auto
				bottom 0
			+above($screen-sm)
				font-size 3.429rem
	.slide, .slick-track, .slick-list, .container, .wrapper
		height: 100%

.slider_controls
	position: absolute
	left 0
	top 0
	display: none
	width: 100%
	.container
		position: relative
		height: 1px
	.arrow
		position: absolute
		top 258px
		z-index: 2
		left: 0
		text-decoration: none
		&:hover
			svg
				fill #ffb400
		&-right
			right 0
			left: auto
	+above($screen-sm)
		display: block

.section-heading
	position: relative
	width: 100%
	background-color: #1c56a0
	height: 110px
	color #ffb400
	text-align: center
	z-index: 4
	box-shadow 10px 0 10px 0 rgba(black, 0.3)
	+above($screen-sm)
		height: 130px
	.container
		position: relative
		display: table
		width: 100%
		height: 100%
	&:before
		content ''
		width: 100%
		height: 1px
		background-color: #fff
		position: absolute
		left 0
		top 50%
	h2
		display: table-cell
		vertical-align: middle
		margin: 0
		line-height: 1.4
		font-weight: 300
		text-align: center
		text-transform: uppercase

		+above($screen-sm)
			font-size 2.143rem
		span
			position: relative
			display: inline-block
			z-index: 1
			padding 0 20px
			max-width 640px
			width: 100%
			background-color: #1c56a0
	.section-icon
		display: none
		+above($screen-sm)
			display: block
			position: absolute
			padding 0 10px
			left 8%
			background-color: #1c56a0
			top 50%
			transform translateY(-50%)
			z-index: 2
			&-right
				left: auto
				right 8%
		+above($screen-md)
			left: 2%
			&-right
				left: auto
				right 2%

// SHOWCASE

.showcase
	background url(../images/pattern.jpg) center
	&-group
		padding 20px 0
		
.product-item


	transition all 0.3s
	z-index: 2
	width: 232px
	min-height: 326px
	text-align: center
	margin 20px 20px
	.img-link
		display: block
		height: 168px
		position: relative
		background-color: white
		border 1px solid #e8e8e8
		border-bottom: 0
		img
			max-width: 100%
			max-height: 100%
	.item-name
		display: block
		padding-top: 34px
		background-color: #1c56a0
		width: 100%
		height: 96px
		color white
		position: relative
		text-decoration: none
		line-height 1.6
		text-transform: uppercase
		&:after
			content ''
			border 1px solid #e8e8e8
			width: 216px
			height: 136px
			position: absolute
			left 8px
			top 20px
	&:hover
		.img-link
			box-shadow 0 0 15px 0 rgba(black, 0.2)
	.price
		height: 58px
		line-height: 58px
		font-size 1.5rem
		font-weight: 500