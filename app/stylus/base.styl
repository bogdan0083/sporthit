.mobile-menu
    background-color white
    color black
    width 200px
    padding 20px
    position fixed
    left 0
    top 0
    min-height 100%
    overflow auto
    transition transform 0.3s
    transform translateX(-100%)
    &.active
        transform translateX(0)
    +above(880px)
        display none
    a, span
        font-weight 700
        text-transform uppercase
        text-decoration none
        display block
        margin 10px 0
        font-size 1.3rem
        &:first-child
            margin-top 0
    span
        color white


.field
    height: 40px
    display: block
    width: 100%
    padding-left: 20px
    padding-right: 20px
    margin: 0 auto
    background-color: #fdfcfc
    border: 1px solid #dfdfdf
    &-text
        resize none
        height: 100px
        padding-top: 10px
    &:focus
        border-color: gray
        outline none

.fadeInUp
    animation fadeInUp

.animated
    animation-fill-mode both