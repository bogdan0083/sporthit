body
    color black
    font-size 1rem
    font-family 'Museo Sans', sans-serif
    font-weight 300

a
    text-decoration underline
    color inherit
    transition all 0.3s
    &:hover
        text-decoration none


.page-wrapper
    overflow: hidden
    position: relative

address
    font-style: normal

.icon
    display inline-block
    vertical-align middle
    position relative
    background-color: transparent
    padding: 0
    border none
    &:before
        content ''
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        display block
        opacity: 0
        transition all 0.3s
    &:after
        content ''
        top 0
        left 0
        position: absolute
        opacity: 1
        transition all 0.3s
    + span
        display inline-block
        vertical-align middle

img
    max-width 100%

