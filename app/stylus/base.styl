.mobile-menu
    background-color white
    color black
    width 200px
    padding 20px
    position fixed
    left 0
    top 0
    min-height 100%
    overflow auto
    transition transform 0.3s
    transform translateX(-100%)
    &.active
        transform translateX(0)
    +above(880px)
        display none
    a, span
        font-weight 700
        text-transform uppercase
        text-decoration none
        display block
        margin 10px 0
        font-size 1.3rem
        &:first-child
            margin-top 0
    span
        color white


.btn
    position: relative
    background-color: #ffb400
    display: block
    width: 270px
    height: 40px
    text-decoration: none
    text-transform: uppercase
    color white
    font-weight: 500
    line-height: 40px
    margin: 0 auto
    text-align: center
    &:hover > div:before
        transform none
    &:hover:before
        border-color: transparent #1c56a0 transparent transparent;
    &:hover:after
        border-color: #1c56a0 transparent transparent transparent;
    > div
        height: 100%
        overflow: hidden
        position: relative
        span
            position: relative
            z-index: 1
        &:before
            content ''
            background-color: #1c56a0
            position: absolute
            width: 100%
            height: 100%
            left: 0
            top: 0
            transition all 0.3s
            transform translateY(100%)
    &:before
        content ''
        width: 0;
        height: 0;
        border-style: solid;
        border-width: 0 6px 13px 0;
        border-color: transparent #d78100 transparent transparent;
        position: absolute
        left -6px
        bottom 0
        transition all 0.3s
    &:after
        content ''
        width: 0;
        height: 0;
        border-style: solid;
        border-width: 13px 6px 0 0;
        border-color: #d78100 transparent transparent transparent;
        position: absolute
        right -6px
        bottom 0
        transition all 0.3s

.btn-secondary
    display: block
    background-color: #1c56a0
    height: 40px
    line-height: 40px
    text-transform: uppercase
    text-decoration: none
    text-align: center
    margin 4px 0
    color #ffb400
    position: relative
    z-index: 2
    width: 120px
    padding: 0
    font-size 0.857rem
    border none
    overflow: hidden
    span
        position: relative
        z-index: 1
    &:hover:before, &.active:before
        transform translateX(50%) skew(-10deg)
        opacity: 1
    &:before
        content ''
        width: 100%
        background: rgba(white, 0.4)
        height: 100%
        transform translateX(100%) skew(-10deg)
        transition all 0.3s
        position: absolute
        opacity: 0
        right: 0
        top: 0
.field
    height: 40px
    display: block
    width: 100%
    padding-left: 20px
    padding-right: 20px
    margin: 10px auto
    background-color: #fdfcfc
    border: 1px solid #ccc
    &::placeholder
        color #666
    &-required
        border-color #1c56a0
        &::placeholder
            color #1c56a0
    &-text
        resize none
        height: 100px
        padding-top: 10px
    &:focus
        border-color: gray
        outline none
    &-name
        background: url(../images/user.png) no-repeat right 14px center
    &-tel
        background: url(../images/phone.png) no-repeat right 16px center
    &-text
        background: url(../images/speech.png) no-repeat right 12px top 10px

